{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "LayoutSpec",
  "description": "A DiagramSpec with added layout information (node positions and edge routes).",
  "type": "object",
  "properties": {
    "nodes": {
      "type": "array",
      "description": "The nodes of the diagram with layout information.",
      "items": {
        "type": "object",
        "properties": {
          "id": { "type": "string" },
          "text": { "type": "string", "minLength": 1 },
          "kind": { "type": "string", "enum": ["start", "end", "process", "decision", "data", "note"] },
          "x": { "type": "number" },
          "y": { "type": "number" },
          "width": { "type": "number" },
          "height": { "type": "number" }
        },
        "required": ["id", "text", "kind", "x", "y", "width", "height"]
      }
    },
    "edges": {
      "type": "array",
      "description": "The edges connecting nodes with layout information.",
      "items": {
        "type": "object",
        "properties": {
          "from": { "type": "string" },
          "to": { "type": "string" },
          "text": { "type": "string" },
          "points": {
            "type": "array",
            "items": {
              "type": "array",
              "items": [{ "type": "number" }, { "type": "number" }],
              "minItems": 2,
              "maxItems": 2
            }
          }
        },
        "required": ["from", "to", "points"]
      }
    },
    "groups": {
      "type": "array",
      "description": "Optional groupings of nodes.",
      "items": {
        "type": "object",
        "properties": {
          "id": { "type": "string" },
          "text": { "type": "string" },
          "node_ids": { "type": "array", "items": { "type": "string" } }
        },
        "required": ["id", "text", "node_ids"]
      }
    },
    "style": {
      "type": "string",
      "description": "Optional style hint for the diagram."
    }
  },
  "required": ["nodes", "edges"]
}
